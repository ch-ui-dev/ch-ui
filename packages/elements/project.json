{
  "root": "packages/elements",
  "sourceRoot": "packages/elements/src",
  "projectType": "library",
  "targets": {
    "build": {
      "command": "cd packages/elements && ./node_modules/.bin/stencil build"
    },
    "serve": {
      "command": "cd packages/elements && ./node_modules/.bin/stencil build --serve --watch --dev"
    },
    "build-watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/elements && ./node_modules/.bin/stencil build --watch",
        "parallel": true,
        "readyWhen": "build finished"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": ["packages/elements/src/**/*.{js,jsx,ts,tsx}"],
        "quiet": true
      },
      "outputs": ["{options.outputFile}"]
    }
  }
}
