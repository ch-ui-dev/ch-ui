{
  "name": "tokens",
  "root": "packages/tokens",
  "sourceRoot": "packages/tokens/src",
  "projectType": "library",
  "targets": {
    "build": {
      "command": "rm packages/tokens/dist/package.json",
      "dependsOn": ["preBuild"]
    },
    "preBuild": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "external": ["@ch-ui/colors", "postcss"],
        "main": "{projectRoot}/src/index.ts",
        "outputPath": "{projectRoot}/dist",
        "tsConfig": "{projectRoot}/tsconfig.json",
        "format": ["cjs", "esm"],
        "declarationRootDir": "{projectRoot}",
        "sourcemap": true,
        "generatePackageJson": false
      },
      "dependsOn": ["^build"],
      "outputs": ["{options.outputPath}"]
    },
    "test": {
      "command": "cd packages/tokens && tsx ./test/colors.spec.ts && tsx ./test/typography.spec.ts && tsx ./test/audit.spec.ts"
    }
  }
}
