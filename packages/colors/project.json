{
  "sourceRoot": "packages/colors/src",
  "projectType": "library",
  "targets": {
    "compile": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/colors/src/index.ts",
        "outputPath": "packages/colors/dist/types",
        "tsConfig": "packages/colors/tsconfig.json"
      },
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "build-esm": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "main": "packages/colors/src/index.ts",
        "outputPath": "packages/colors/dist/esm",
        "tsConfig": "packages/colors/tsconfig-esbuild.json",
        "format": [
          "esm"
        ]
      },
      "dependsOn": [
        "compile"
      ],
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "main": "packages/colors/src/index.ts",
        "outputPath": "packages/colors/dist/cjs",
        "tsConfig": "packages/colors/tsconfig-esbuild.json",
        "format": [
          "cjs"
        ]
      },
      "dependsOn": [
        "compile",
        "build-esm"
      ],
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "format": "unix",
        "lintFilePatterns": [
          "packages/colors/src/**/*.{js,jsx,ts,tsx}"
        ],
        "quiet": true
      },
      "outputs": [
        "{options.outputFile}"
      ]
    }
  }
}
