{
  "name": "@ch-ui/ch-ui",
  "private": true,
  "version": "0.5.0",
  "scripts": {
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write packages"
  },
  "devDependencies": {
    "@nx/esbuild": "^18.3.4",
    "@nx/js": "18.3.4",
    "@nx/storybook": "^18.3.4",
    "@nx/vite": "^18.3.4",
    "@swc-node/register": "^1.8.0",
    "@swc/core": "~1.3.85",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.4.0",
    "esbuild": "~0.19.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.13",
    "jsdom": "~22.1.0",
    "nx": "18.3.4",
    "prettier": "3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "coverage",
      "dist",
      "node_modules",
      "out",
      "tmp",
      "pnpm-lock.yaml"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "astro",
      "@typescript-eslint/eslint-plugin",
      "react-hooks",
      "react-refresh",
      "notice"
    ],
    "extends": [
      "prettier",
      "plugin:storybook/recommended",
      "plugin:astro/recommended"
    ],
    "rules": {
      "notice/notice": [
        "error",
        {
          "mustMatch": "Required notice: Copyright \\(c\\) [0-9]{0,4}, Will Shown <ch-ui@willshown.com>",
          "template": "// Required notice: Copyright (c) <%= YEAR %>, Will Shown <ch-ui@willshown.com>\n\n"
        }
      ]
    }
  }
}
