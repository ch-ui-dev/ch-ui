{
  "name": "@ch-ui/ch-ui",
  "private": true,
  "version": "0.5.0",
  "scripts": {
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write packages"
  },
  "devDependencies": {
    "@nx/esbuild": "^17.0.2",
    "@nx/js": "17.0.1",
    "@nx/storybook": "^18.2.1",
    "@nx/vite": "^17.0.1",
    "@swc-node/register": "~1.6.7",
    "@swc/core": "~1.3.85",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "~4.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "@vitest/ui": "~0.32.0",
    "esbuild": "~0.19.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.13",
    "jsdom": "~22.1.0",
    "nx": "17.0.1",
    "prettier": "3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.4.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "~0.32.0"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "coverage",
      "dist",
      "node_modules",
      "out",
      "tmp",
      "pnpm-lock.yaml"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin",
      "react-hooks",
      "react-refresh",
      "notice"
    ],
    "extends": [
      "prettier",
      "plugin:storybook/recommended"
    ],
    "rules": {
      "notice/notice": [
        "error",
        {
          "mustMatch": "Copyright \\(c\\) [0-9]{0,4}, Will Shown <ch-ui@willshown.com>",
          "template": "/** Copyright (c) <%= YEAR %>, Will Shown <ch-ui@willshown.com> **/"
        }
      ]
    }
  }
}
