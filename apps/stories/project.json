{
  "root": "apps/stories",
  "sourceRoot": "apps/stories/src",
  "projectType": "library",
  "targets": {
    "storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": ["^build", "elements:build-watch"],
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "apps/stories/all-stories"
      }
    },
    "lint": {
      "options": {
        "lintFilePatterns": ["{projectRoot}/all-stories/**/*.{ts,mts}"]
      }
    }
  }
}
